<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="姓名"
            android:id="@+id/textView" android:layout_gravity="left|center_vertical"
            />
    <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="myName"
            android:id="@+id/myName" android:layout_gravity="center"
            android:layout_centerHorizontal="true" android:layout_below="@+id/myPhone"/>
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="电话号码"
            android:id="@+id/textView1" android:layout_alignLeft="@+id/textView"
            android:layout_alignTop="@+id/phoneNum" android:layout_gravity="left|center_vertical"/>
    <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="phoneNum"
            android:id="@+id/myPhone"
            android:layout_gravity="center"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MakeQRcode"
            android:id="@+id/makeQRcodeButton"
            android:layout_alignParentLeft="true" android:layout_marginLeft="138dp" android:layout_alignParentTop="true"
            android:layout_marginTop="115dp" android:focusable="true"
            android:focusableInTouchMode="true" android:layout_gravity="right|center_vertical"/>
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imageView" android:layout_alignParentLeft="true" android:layout_marginLeft="194dp"
            android:layout_alignParentTop="true" android:layout_marginTop="153dp" android:layout_gravity="bottom|left"/>
</LinearLayout>